@model Guardian
@{

}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color:purple">
            <h1 class="h3 mb-0"><strong>Guardian: @Model.FirstName @(" ") @Model.LastName</strong></h1>
        </div>

        <div class="card-body">
            <div>
                <h3 class="h5 text-secondary">Email Address:</h3>
                <p>@Model.Email</p>
            </div>

            <div>
                <h3 class="h5 text-secondary">Home Address:</h3>
                <p>@Model.HomeAddress</p>
            </div>

            <div>
                <h3 class="h5 text-secondary">TCK:</h3>
                <p>@Model.TCK</p>
            </div>

            <div>
                <h3 class="h5 text-secondary">Phone Number:</h3>
                <p>@Model.PhoneNumber</p>
            </div>

            <div>
                <h3 class="h5 text-secondary">Children:</h3>
                @if (Model.Students != null)
                {
                    <p>
                        <ul>
                            @foreach (var child in Model.Students)
                            {
                                <li><a asp-area="Admin" asp-controller="Student" asp-action="Details" asp-route-id="@child.Id">@child.FirstName @(" ") @child.LastName</a></li>
                            }
                        </ul>
                    </p>
                }
                else
                {
                    <p>NONE</p>
                }

            </div>
        </div>
    </div>
</div>

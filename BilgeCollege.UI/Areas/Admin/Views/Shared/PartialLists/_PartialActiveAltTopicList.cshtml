@model List<AltTopic>
@{
    int num = 1;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between">
        <h2 class="mb-4">Active Alt Topics List</h2>
        <form asp-area="Admin" asp-controller="AltTopic" asp-action="DeleteAll" method="post" style="display:inline; margin-right:100px;" onsubmit="return confirm('Are you sure you want to delete all active alt topics?');">
            <button type="submit" class="btn btn-danger">Delete All</button>
        </form>
    </div>
    
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Topic Code</th>
                <th score="col">Main Topic</th>
                <th score="col">Teacher</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@num</td>
                    <td><a asp-area="Admin" asp-controller="AltTopic" asp-action="Details" asp-route-id="@item.Id">@item.TopicCode</a></td>
                    <td>
                        <a asp-area="Admin" asp-controller="MainTopic" asp-action="Details" asp-route-id="@item.MainTopicId">@item.MainTopic.TopicName</a>
                    </td>
                    <td>
                        @if (item.Teacher != null)
                        {
                            <a asp-area="Admin" asp-controller="Teacher" asp-action="Details" asp-route-id="@item.TeacherId">@item.Teacher.FirstName @(" ") @item.Teacher.LastName</a>
                        }  
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-area="Admin" asp-controller="AltTopic" asp-action="Update" asp-route-id="@item.Id">Edit</a>

                        <form asp-area="Admin" asp-controller="AltTopic" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this alt topic?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                num++;
            }
        </tbody>
    </table>
</div>

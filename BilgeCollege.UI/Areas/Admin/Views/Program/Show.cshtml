@model List<DaySchedule>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Program";
    int i = 0;
}

<div class="d-flex">
    <div>
        <ul>
            @foreach (var item in ViewBag.ActiveClassrooms)
            {
                <li class="mb-1"><a asp-area="Admin" asp-controller="Program" asp-action="Show" asp-route-id="@item.Id" class="btn btn-primary d-grid" style="background-color:purple">@item.Grade</a></li>
            }
        </ul>
    </div>

    <div style="margin-left:30px;width:90%">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-decoration-underline">Day / Class</th>
                    <th>1. Class</th>
                    <th>2. Class</th>
                    <th>3. Class</th>
                    <th>4. Class</th>
                    <th>5. Class</th>
                    <th>6. Class</th>
                    <th>7. Class</th>
                    <th>8. Class</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var day in ViewBag.Days)
                {
                    <tr>
                        <th>@day</th>
                        @if(Model != null)
                        {
                            if(Model[i].AltTopics != null)
                            {
                                for (int j = 0; j < 8; j++)
                                {
                                    <td>@Model[i].AltTopics[j].TopicCode</td>
                                }
                            }
                            else
                            {
                                for (int j = 0; j < 8; j++)
                                {
                                    <td></td>
                                }
                            }

                            <td>
                                <a asp-area="Admin" asp-controller="Program" asp-action="Update" asp-route-id="@Model[i].GuidId" class="btn btn-warning">Edit</a>
                                <a asp-area="Admin" asp-controller="Program" asp-action="Create" asp-route-id="@Model[i].GuidId" class="btn btn-primary">Create</a>
                            </td>
                            
                        }
                        else
                        {
                            for (int j = 0; j < 8; j++)
                            {
                                <td></td>
                            }
                        }
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

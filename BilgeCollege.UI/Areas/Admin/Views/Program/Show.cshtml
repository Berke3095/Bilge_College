@model List<AltTopic>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Program";
}

<div class="d-flex">
    <div>
        <ul>
            @foreach (var item in ViewBag.ActiveClassrooms)
            {
                <li class="mb-1"><a asp-area="Admin" asp-controller="Classroom" asp-action="Show" asp-route-id="Id" class="btn btn-primary d-grid">@item.Grade</a></li>
            }
        </ul>
    </div>

    <div style="margin-left:30px;width:90%">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Day / Hour</th>
                    <th>1. Class</th>
                    <th>2. Class</th>
                    <th>3. Class</th>
                    <th>4. Class</th>
                    <th>5. Class</th>
                    <th>6. Class</th>
                    <th>7. Class</th>
                    <th>8. Class</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Monday</th>

                </tr>
            </tbody>
        </table>
    </div>
</div>

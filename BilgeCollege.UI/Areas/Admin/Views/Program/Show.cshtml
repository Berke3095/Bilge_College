@model List<DaySchedule>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Program";
    int i = 0;
}

<div class="d-flex">
    <div>
        <ul>
            @foreach (var item in ViewBag.ActiveClassrooms)
            {
                <li class="mb-1"><a asp-area="Admin" asp-controller="Classroom" asp-action="Show" asp-route-id="Id" class="btn btn-primary d-grid">@item.Grade</a></li>
            }
        </ul>
    </div>

    <div style="margin-left:30px;width:90%">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Day / Hour</th>
                    <th>1. Class</th>
                    <th>2. Class</th>
                    <th>3. Class</th>
                    <th>4. Class</th>
                    <th>5. Class</th>
                    <th>6. Class</th>
                    <th>7. Class</th>
                    <th>8. Class</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var day in ViewBag.Days)
                {
                    <tr>
                        <th>@day</th>
                        @if(Model != null)
                        {
                            @foreach (var altTopic in Model[i].DaySchedule_AltTopics)
                            {
                                <td>altTopic.AltTopic.TopicCode</td>
                            }
                        }
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

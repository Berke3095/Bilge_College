@model MainTopicVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update MainTopic";
}

<head>
    <title>@ViewData["Title"]</title>
    <link href="~/css/createMainTopic.css" rel="stylesheet">
</head>

<body>

    <div class="d-flex">

        <div class="col-md-3">
            <div class="text-center">
                <h1 class="display-5">Original</h1>
            </div>

            <form class="create-container">
                <div class="form-group mb-4">
                    <input type="text" class="form-control" placeholder="@Model.TopicName" disabled>
                </div>
            </form>
        </div>

        <div class="col-md-3">
            <div class="text-center">
                <h1 class="display-5">Updated</h1>
            </div>

            <form method="post" class="create-container">
                <div class="form-group mb-4">
                    <input asp-for="TopicName" type="text" class="form-control" placeholder="Main topic, ex: Math">
                    <span asp-validation-for="TopicName" class="form-text text text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-create">Confirm</button>
                </div>
            </form>
        </div>
        
    </div>

</body>

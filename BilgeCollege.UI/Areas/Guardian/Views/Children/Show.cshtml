@model Guardian
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Children";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        @if (Model.Students != null)
        {
            @foreach (var student in Model.Students)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header text-center bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <a asp-area="Admin" asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="text-white text-decoration-none">
                                    @student.FirstName @(" ") @student.LastName
                                </a>
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            <p class="card-text">
                                <strong>Gender:</strong> @student.Gender
                            </p>
                            <p class="card-text">
                                <strong>Grade:</strong> @((student.Classroom != null) ? student.Classroom.Grade : "None")
                            </p>
                        </div>
                        <div class="card-footer bg-light text-center">
                            <a asp-area="Admin" asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No students found.</p>
            </div>
        }
    </div>
</div>

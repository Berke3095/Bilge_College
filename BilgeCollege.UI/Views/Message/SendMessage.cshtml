@model SendMessageVM
@{
    ViewData["Title"] = "Send Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-4">
    <form method="post" class="form-container">
        <div class="form-group mb-4">
            <label>E-mail:</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="example@@bilgeadam.com">
            <span asp-validation-for="Email" class="form-text text text-danger"></span>
        </div>

        <div class="form-group mb-4 mt-2">
            <label>Message:</label>
            <textarea asp-for="Text" type="text" class="form-control" placeholder="Message..." rows="4"></textarea>
            <span asp-validation-for="Text" class="form-text text text-danger"></span>
        </div>

        <div>
            @if (ViewData["SuccessMessage"] != null)
            {
                <span class="text-success">@ViewData["SuccessMessage"]</span>
            }
            else if (ViewData["FailMessage"] != null)
            {
                <span class="text-danger">@ViewData["FailMessage"]</span>
            }
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-submit btn-primary">Send</button>
        </div>

    </form>
</div>

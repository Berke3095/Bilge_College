@model List<MainTopic>
@{

}

<div class="container mt-4">
    <h2 class="mb-4">Main Topics List</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Topic Name</th>
                <th scope="col">Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TopicName</td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-area="Admin" asp-controller="MainTopic" asp-action="Destroy" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this topic?');">
                            <button type="submit" class="btn btn-danger btn-sm">Destroy</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
